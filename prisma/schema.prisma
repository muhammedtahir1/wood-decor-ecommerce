generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int         @id @default(autoincrement())
  title       String
  slug        String      @unique
  description String?
  category    String?
  image       String
  colors      String[]
  label       String?
  isFeatured  Boolean     @default(false)
  rating      Float       @default(0)
  OrderItem   OrderItem[]
  prices      Variants[]
}

model Variants {
  id              Int     @id @default(autoincrement())
  variant         String
  price           Int
  discountedPrice Int?
  productId       Int
  Product         Product @relation(fields: [productId], references: [id])

  @@unique([variant, price, productId])
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Order {
  id          Int         @id @default(autoincrement())
  name        String
  email       String
  phone       String
  address     String
  totalAmount Int
  status      String      @default("pending")
  createdAt   DateTime    @default(now())
  orderItems  OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int     @default(1)
  color     String?
  variant   String?
  price     Int     @default(0)
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model Review {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String?
  email       String
  rating      Int
  image       String?
  description String
}
